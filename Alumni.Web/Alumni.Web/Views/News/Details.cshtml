@model Alumni.Services.ServicesForNews.Models.NewsModel

@{
    ViewData["Title"] = "News Details";
}

<div class="container mt-5">
    <h2 class="mb-3">@Model.Title</h2>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="News Image" class="img-fluid mb-4" />
    }

    <p class="text-muted">
        Created: @Model.CreatedOn.ToString("dd MMM yyyy") |
        Last Edited: @Model.LastEdited.ToString("dd MMM yyyy")
    </p>

    <div class="mb-5 fs-5">
        @Model.Contents
    </div>

    <a asp-action="All" class="btn btn-outline-secondary">Back to News</a>
</div>
