@model IEnumerable<Alumni.Services.ServicesForNews.Models.NewsModel>

@{
    ViewData["Title"] = "All News";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">📰 Latest News</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No news available.</div>
    }

    @foreach (var news in Model)
    {
        <div class="card mb-4 shadow-sm">
            @if (!string.IsNullOrEmpty(news.ImageUrl))
            {
                <img class="card-img-top" src="@news.ImageUrl" alt="News Image" style="max-height: 400px; object-fit: cover;">
            }

            <div class="card-body">
                <h3 class="card-title fw-bold text-capitalize">@news.Title</h3>

                <p class="card-text text-muted small mb-2">
                    <strong>Created:</strong> @news.CreatedOn.ToString("dd MMM yyyy") |
                    <strong>Last Edited:</strong> @(news.LastEdited != DateTime.MinValue ? news.LastEdited.ToString("dd MMM yyyy") : "N/A")
                </p>

                <p class="card-text">@news.Contents?.Substring(0, Math.Min(news.Contents.Length, 200))... </p>

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <a asp-action="Details" asp-route-id="@news.NewsId" class="btn btn-primary btn-sm">
                        <i class="bi bi-book"></i> Read More
                    </a>

                    <a asp-action="Edit" asp-route-id="@news.NewsId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <form asp-action="Delete" asp-route-id="@news.NewsId" method="post" onsubmit="return confirm('Are you sure you want to delete this news item?');" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
