@model IEnumerable<Alumni.Data.Models.HelpRequest>

@{
    ViewData["Title"] = "Help Requests";
}

<h1 class="mb-4">Help Requests</h1>

<p>
    <a asp-action="Create" asp-controller="Guest" class="btn btn-success">Ask for Help</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No help requests yet.</div>
}
else
{
    <div class="row">
        @foreach (var request in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <a asp-action="Details" asp-route-id="@request.Id" class="text-decoration-none text-dark">
                    <div class="card shadow-sm h-100 border-0" style="cursor: pointer;">
                        <div class="card-body">
                            <h5 class="card-title">@request.Title</h5>
                            <p class="card-text text-muted mb-1">
                                @request.Description?.Substring(0, Math.Min(100, request.Description.Length))...
                            </p>
                            <small class="text-muted">Posted on @request.CreatedOn.ToShortDateString()</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}