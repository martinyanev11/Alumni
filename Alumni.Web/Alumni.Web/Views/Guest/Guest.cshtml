@model Alumni.Web.ViewModels.GuestViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="jumbotron text-center mb-5">
        <h1 class="display-4">Welcome to the Alumni Network</h1>
        <p class="lead">Stay connected, informed, and involved with our alumni community.</p>
        <a href="/About" class="btn btn-primary btn-lg">Learn More</a>
    </div>

    <!-- News Section -->
    <section>
        <h2 class="mb-4">Latest News</h2>
        <div class="row">
            @foreach (var item in Model.News.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-truncate">@item.Contents</p>
                            <a asp-controller="News" asp-action="NewsDetails" asp-route-newsId="@item.NewsId" class="btn btn-outline-primary mt-auto">Read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-end">
            <a asp-controller="News" asp-action="Index" class="btn btn-link">View all news</a>
        </div>
    </section>

    <!-- Events Section -->
    <section class="mt-5">
        <h2 class="mb-4">Upcoming Events</h2>
        <div class="row">
            @foreach (var item in Model.Events.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-truncate">@item.Contents</p>
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId" class="btn btn-outline-secondary mt-auto">Learn more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-end">
            <a asp-controller="Events" asp-action="Index" class="btn btn-link">View all events</a>
        </div>
    </section>

    <!-- About Alumni Network -->
    <section class="mt-5">
        <h2>About Our Alumni Network</h2>
        <p>
            Our alumni network helps former students stay connected with the university and each other.
            We host events, share updates, and provide opportunities for collaboration and contribution.
        </p>
        <p>
            Whether you're reconnecting with friends, expanding your professional network, or giving back
            to the community — we’re here to support you.
        </p>
        <a href="/About" class="btn btn-primary">Get to Know Us</a>
    </section>

</div>
